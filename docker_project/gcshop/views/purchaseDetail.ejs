<table class="table table-bordered">
  <form method="post">
    <% for (let i = 0; i < mer.length; i++) { %>

    <tr>
      <td rowspan="5">
        <img src="<%= mer[i].image %>" style="width: 300px; height: 300px" />
      </td>
      <td><%= mer[i].name %></td>
    </tr>
    <tr>
      <td>
        가격 : <%= mer && mer.length > 0 ? mer[i].price.toLocaleString('ko-KR')
        : '' %> 원
      </td>
    </tr>
    <tr>
      <td>브랜드 : <%= mer[i].brand %></td>
    </tr>
    <tr>
      <td>수량 : <input type="number" name="qty" /></td>
    </tr>
    <input type="hidden" name="loginid" value="" />
    <input type="hidden" name="mer_id" value="" />
    <input type="hidden" name="price" value="" />
    <tr>
      <td>
        <button
          class="btn btn-outline-primary btn-sm"
          formaction="/purchase/<%=mer[i].mer_id%>"
          type="submit"
        >
          결제하기
        </button>
        <button
          class="btn btn-outline-primary btn-sm"
          formaction="#"
          type="submit"
        >
          장바구니
        </button>
      </td>
    </tr>
    <%}%>
  </form>
</table>
