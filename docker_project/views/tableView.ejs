<div class="container">
  <h3><%= tableName %> 자료 목록</h3>
  <table
    class="table table-bordered border-primary table-hover"
    style="text-align: center"
  >
    <thead class="table-primary">
      <tr>
        <% for (var i = 0; i < columns.length; i++) { %>
        <th><%= columns[i].COLUMN_COMMENT || columns[i].COLUMN_NAME %></th>
        <% } %>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% if (table.length > 0) { %> <% for (var i = 0; i < table.length; i++) {
      %>
      <tr>
        <% for (var j = 0; j < columns.length; j++) { %>
        <td><%= table[i][columns[j].COLUMN_NAME] || '-' %></td>
        <% } %>
        <td>
          <a href="#" class="btn btn-outline-primary btn-sm">생성</a>
        </td>
        <td>
          <a href="#" class="btn btn-outline-primary btn-sm">수정</a>
        </td>
        <td>
          <a
            href="#"
            class="btn btn-outline-primary btn-sm"
            onclick="return confirm('정말 삭제하시겠습니까?')"
            >삭제</a
          >
        </td>
      </tr>
      <% } %> <% } else { %>
      <tr>
        <td colspan="<%= columns.length + 3 %>">자료가 없습니다.</td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
